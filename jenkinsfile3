def gitcommit
def nuestraapp
pipeline {
      agent any
      stages {
           stage('Build') {
               steps {
                   checkout scm
                   sh "git rev-parse --short HEAD > .git/commit-id"
                   script {
                        gitcommit = readFile('.git/commit-id').trim()
                   }
               }
           }
       }
       post {
            always {
                  echo 'fin'
            }
       }
}
